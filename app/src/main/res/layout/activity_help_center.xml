<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".helpcenter.HelpCenterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_help_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#4E2056"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_faq" />

        <ImageView
            android:id="@+id/help_center_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/baseline_help_center_24"
            android:background="@drawable/button_shape"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/tv_help_center_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"
            android:contentDescription="Help Center Icon" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_faq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:background="@drawable/button_shape"
            android:layout_marginTop="60dp"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/baseline_question_answer_24"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/help_center_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_contact_support"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_contact_support"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:layout_marginTop="50dp"
            android:text="Contact Support"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/baseline_contact_support_24"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_faq"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>